while _G.unlimitedpoints do
    wait()
    local player = game.Players.LocalPlayer
    local userId = player.UserId

    local replicatedStorage = game:GetService("ReplicatedStorage")
    local scriptsFolder = replicatedStorage:WaitForChild("Scripts")
    local commonFolder = scriptsFolder:WaitForChild("Common")
    local event = commonFolder:WaitForChild("Event"):WaitForChild("RemoteEvent")

    local eventName = "player_" .. userId .. "_claim_online_gift"
    event:FireServer(eventName, 1)
end
